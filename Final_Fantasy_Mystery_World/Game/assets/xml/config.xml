<!-- Config file for the game -->

<config>
  <app framerate_cap="60">
    <title>Final Fantasy: Mystery World</title>
    <organization>UPC</organization>
    <version>0.9.1</version>
    <fast_start value="false"/>
  </app>
 
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="3"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
    <icon path="assets/ff_icon.png"/>
  </window>

  <fonts>
    <path folder="assets/fonts"/>
    <default_font file="Final_Fantasy_font.ttf" size="32"/>
    <font file="Final_Fantasy_font.ttf" size="48"/>
    <font file="Final_Fantasy_font.ttf" size="64"/>
    <font file="Final_Fantasy_font.ttf" size="100"/>
    <font file="pixelmix.ttf" size="16"/>
    <font file="pixelmix.ttf" size="24"/>
    <font file="pixelmix.ttf" size="32"/>
    <font file="pixelmix.ttf" size="48"/>
    <font file="pixelmix.ttf" size="64"/>
    <font file="8-BIT WONDER.ttf" size="50"/>
  </fonts>

  <main_menu>
    <video_intro path="assets/videos/Intro.mp4"/>
  </main_menu>

  <audio>
    <volume value="30"/>
    <volume_fx value="100"/>
    <max_volume value="100"/>
    <default_music_fade_time value="0.5"/>
    <volume_change_ratio value="10"/>
    <mute value="false"/>
    <volume_general value="100"/>
  </audio>

  <map>
    <folder>assets/maps/</folder>
    <maps>
      <lobby_map>Lobby.tmx</lobby_map>
      <lobby_ice>Lobby_Ice.tmx</lobby_ice>
      <lobby_night>Lobby_Night.tmx</lobby_night>
      <shop_map>Shop.tmx</shop_map>
      <home_map>Home.tmx</home_map>
    </maps>
    <start_map map="debug.tmx"/>
  </map>

</config>

<!-- Config file for the game -->

